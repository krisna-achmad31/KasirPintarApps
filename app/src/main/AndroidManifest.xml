<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kris.kasirpintar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KasirPintar">
        <activity
            android:name=".databaseBarang.historyBarang.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".databaseBarang.orderBarang.updateStok.UpdateStokActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".databaseBarang.orderBarang.checkoutBarang.CheckoutBarangActivity" />
        <activity
            android:name=".databaseBarang.orderBarang.cartBarang.CartBarangActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".databaseBarang.editBarang.updateBarang.UpdateItemActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".databaseBarang.editBarang.addBarang.AddItemActivity" />
        <activity
            android:name=".databaseBarang.DatabaseBarangActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>